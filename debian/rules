#!/usr/bin/make -f

build:

clean:
	$(checkdir)
	-rm -f `find . -name "*~"`
	-rm -rf debian/files* core
	-rm -rf debian/reniced
	-rm -ff debian/substvars

install:
	$(checkdir)
	-rm -rf debian/reniced
	install -d $(CURDIR)/debian/reniced/usr/bin/
	install -d $(CURDIR)/debian/reniced/etc/
	install -m 0755 reniced  $(CURDIR)/debian/reniced/usr/bin/
	install -m 0644 reniced.conf $(CURDIR)/debian/reniced/etc/

binary-indep: checkroot build install
	$(checkdir)

	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
#	dh_installdocs README HISTORY
#	dh_installexamples simplebackup.conf
	dh_installman reniced.1
	dh_perl
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary-arch: checkroot build install
	$(checkdir)

# There are no architecture-dependent files to be uploaded
# generated by this package.  If there were any they would be
# made here.

define checkdir
	test -f debian/rules
endef

binary: binary-indep binary-arch

checkroot:
	$(checkdir)
	test root = "`whoami`"

.PHONY: binary binary-arch binary-indep clean checkroot
